<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<% title "Homepage" %>
  <div class="content">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <%= render partial: 'units/advanced' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 results">
            <%= total_found(@units) %>
          </div>

        </div>
        <div class="row">
          <div class="col-md-12">

            <div style='width: 100%;'>
              <div id="map" style='width: 100%; height: 550px;'></div>
            </div>
            <script type="text/javascript">

                $('#map').gmap().bind('init', function(ev, map) {

                    <% @units.each do |unit| %>
                    $('#map').gmap('addMarker', {'position': '<%= unit.latitude %>,<%= unit.longitude %>', 'bounds': true}).click(function() {
                        $('#map').gmap('openInfoWindow', {'content': '<%= link_to unit.formatted_address, unit_url(unit) %>'}, this);
                    });
                    <% end %>

                    if(!localStorage.getItem("zoom"))
                    {
                        $("#map").gmap('option', 'zoom', 7);
                    }
                    else
                    {
                        $("#map").gmap('option', 'zoom', parseInt(localStorage.getItem("zoom")));
                    }

                    $(map).addEventListener('zoom_changed', function() {
                        zoomLevel = map.getZoom();
                        localStorage.setItem("zoom", zoomLevel);
                    });

                });
            </script>
          </div>
        </div>
      </div>
    </div>
  </div>

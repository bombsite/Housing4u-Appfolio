#nokogiri
gem 'nokogiri'

#searching
gem 'tire'

#db foreigner
gem 'foreigner'

gem 'gzip'

#paging
gem 'kaminari'

#geocoding
gem 'geocoder'

#Gmaps
gem 'gmaps4rails'

#Underscore.js
gem 'underscore-rails'

#yelp
gem 'yelpster'

#cert
gem 'certified'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end


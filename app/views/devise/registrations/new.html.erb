<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Please register below</h3>
            </div>
            <div class="panel-body">
              <%= devise_error_messages! %>

              <form accept-charset="UTF-8" role="form">
                <fieldset>
                  <div class="form-group">
                    <%= f.email_field :email, :class => "form-control", :placeholder => "E-mail"%>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, :class => "form-control", :placeholder => "Password"%>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password confirmation"%>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :phone_number, :class => "form-control", :placeholder => "Phone Number (optional, numbers only)"%>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :company_name, :class => "form-control", :placeholder => "Company Name (optional)"%>
                  </div>
                  <%= f.submit "Register", :class=>"btn btn-lg btn-success btn-block" %>
                </fieldset>
              </form>
              <%= render "devise/shared/links" %>

            </div>
          </div>
        </div>
      </div>
    </div>

<% end %>



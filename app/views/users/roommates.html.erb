<% title "Roommate Matching" %>

<% if @user.survey_completed %>
    <h1>Your Top 5 Roomates:</h1>
    <table class="table table-striped">
      <% for k in 0..4 %>
        <% if @array[k*4] != nil %>
          <% if @array[k*4 + 1] != nil %>
          <tr>
            <td><img src="<%= @array[k*4 + 1] %>" width="100" height="100"></td>
          <% else %>
          <tr>
            <td><img src="http://robertrosenthal.typepad.com/photos/uncategorized/ist_2.jpg" width="100" height="100"></td>
          <% end %>
            <td><a href="/viewuser?id=<%=@array[k*4 + 2]%>"><%=@array[k*4 + 3]%></a> matched you <%= ((@array[k*4]/9.0)*100).to_int %>%</td>
          </tr>
        <% end %>
      <% end %>
    </table>
<% else %>
    <META http-equiv="refresh" content="10;URL=/users/edit?match=true">
    <p> You have not completed the roommate matching survey. You will be redirected in 10 seconds or you can click <a href="/users/edit?match=true">here</a> to go directly.</p>
<% end %>
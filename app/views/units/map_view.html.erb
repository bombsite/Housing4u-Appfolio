<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<% title "Homepage" %>
  <div class="content">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <%= render partial: 'units/advanced' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 results">
            <%= total_found(@units) %>
          </div>
          <div class="col-md-4 col-md-offset-4" style="text-align:right;padding-right:16px;">
            <a href="<%= request.original_url.sub! 'map_view=1', '' %>"><button class="btn btn-primary">List View</button></a><br><br>
          </div>
        </div>
        <div class="row">

          <% if @units.respond_to?(:facets) && @units.facets.present? %>
            <div class="col-md-2">
              <%= render partial: 'units/mapfacets', locals: {total: @units.total} %>
            </div>
          <% end %>
          <div class="<%= (@units.respond_to?(:facets) && @units.facets.present? ? 'col-md-10' : 'col-md-12') %>">

            <div style='width: 100%;'>
              <div id="map" style='width: 100%; height: 550px;'></div>
            </div>
            <script type="text/javascript">

                $('#map').gmap().bind('init', function(ev, map) {

                    <% @units.each do |unit| %>
                    $('#map').gmap('addMarker', {'position': '<%= unit.latitude %>,<%= unit.longitude %>', 'bounds': true}).click(function() {
                        $('#map').gmap('openInfoWindow', {'content': '<%= link_to unit.formatted_address, unit_url(unit) %>'}, this);
                    });
                    <% end %>
                    $("#map").gmap('option', 'zoom', 7);

                });

            </script>
          </div>
        </div>
      </div>
    </div>
  </div>

<% if total > 0 %>
<div class="sidebar-nav" style="position:fixed">
  <div class="well">

    <div class="nav-header" style="padding-top:8px;">
      <a data-toggle="collapse" href="#bedrooms" class="btn btn-success btn-block" role="button">Bedrooms</a>
    </div>
    <div id="bedrooms" class="collapse in">
      <ul class="nav nav-list">
        <% @units.facets['current-bedroom']['terms'].each do |facet| %>
            <%= render partial: 'units/facet', locals: {term: facet['term'],
                                                        count: facet['count'],
                                                        name: facet['term'],
                                                        search_option:'bedrooms'} %>
        <% end %>
      </ul>
    </div>

    <div class="nav-header">
      <a data-toggle="collapse" href="#bathrooms" class="btn btn-success btn-block" role="button">Bathrooms</a>
    </div>
    <div id="bathrooms" class="collapse in">
      <ul class="nav nav-list">
        <% @units.facets['current-bathroom']['terms'].each do |facet| %>
            <%= render partial: 'units/facet', locals: {term: facet['term'],
                                                        count: facet['count'],
                                                        name: facet['term'],
                                                        search_option:'bathrooms'} %>
        <% end %>
      </ul>
    </div>

  </div>
</div>
<% end %>